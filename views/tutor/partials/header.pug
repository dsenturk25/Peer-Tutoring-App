doctype html
html(lang='tr')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no, maximum-scale=1.0, user-scalable=0')
    title Tutorise | #{title}
    link(rel="stylesheet", href="https://unpkg.com/leaflet/dist/leaflet.css")
    script(src="https://unpkg.com/leaflet/dist/leaflet.js")
    link(href='https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900' rel='stylesheet')
    script(src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js')
    if includes && includes.external
      if includes.external.css
        if includes.external.css.includes('page')
          link(rel='stylesheet' href=`/css/${page}.css`)
        if includes.external.css.includes('general')
          link(rel='stylesheet' href=`/css/${page.split("/")[0]}/general.css`)
        if includes.external.css.includes('index')
          link(rel='stylesheet' href=`/css/${page.split("/")[0]}/index.css`)
      if includes.external.js 
        if includes.external.js.includes('page')
          script(src=`/js/${page}.js`)
        if includes.external.js.includes('functions')
          script(src=`/js/functions/httpRequest.js`)
          script(src=`/js/functions/logout.js`) 
          script(src=`/js/functions/popUp.js`) 
        script(src="https://kit.fontawesome.com/e47420f551.js" crossorigin="anonymous")
  body
    .tutor-navbar
      .main-title-content
        .each-title-content Tutorise Dashboard
        .each-title-content-type Tutor
      .navbar-menu-wrapper 
        a(href="/tutor/school").each-menu-content 🏫 School
        a(href="/tutor").each-menu-content 📅 Overview
        a(href="/tutor/lessons").each-menu-content 🧑‍🎓 Lessons
        a(href="/tutor/slot").each-menu-content ⌚ Open Slot
        a(href="/tutor/profile").each-menu-content 🧑‍🏫 Profile
        #logout.each-menu-content 🚪 Log out
      .navbar-footer-content 
        span Tutorise © 2024
        span Powered by Ledgerise Teknoloji
    block content