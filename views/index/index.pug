
extends ../partials/header.pug
block content
  .all-main-wrapper
    .header-main-wrapper 
      a(href="/").each-header-item 
        img.logo-image(src="/res/images/logo.png", alt="Mentorise Logo")
      a(href="/tutor").each-header-item Mentor page
      a(href="/student").each-header-item Student page
      a(href="/admin").each-header-item Admin page
      a(href="mailto:doguboran@ledgerise.org").each-header-item 
        .join-button Join Mentorise!
    .inner-main-wrapper
      .main-description Mentoring Redefined
      .main-title 
        span The 
        span(style="color: rgb(100,99,251)") Easiest 
        span Way to Connect With Your School's 
        span(style="color: rgb(100,99,251)") Notable Alumni 
      .subsequent-description Mentorise is the first alumni-student connection social media for high school students in Turkey. With Mentorise you can get insight and inquiry about the career or college degree you wanna pursue. 
      .start-buttons 
        a(href="/student").each-start-button Take Lessons
        a(href="/tutor" style="background-color:#6465f1; color:#fff; box-shadow: 0px 4px 5px #6465f1").each-start-button Start Mentoring
      .clients-display-content 
        .clients-display-title Trusted by
        .clients-all-clients-wrapper
